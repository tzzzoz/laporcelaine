<h1>Livraison</h1>
<div class="error-box" style="display: none;"></div>
<%= form_for(@order, url: {action: "create"}, html: {name: 'new-order'}) do |order_form|%>
  <h2>Adresse</h2>
  <%= fields_for @order.address do |address_form| %>
    <%= address_form.label :adresse_ligne_1 %>
    <%= address_form.text_field :address1 %>
    <%= address_form.label :adresse_ligne_2 %>
    <%= address_form.text_field :address2 %>
    <%= address_form.label :ville %>
    <%= address_form.text_field :city %>
    <%= address_form.label :code_postal %>
    <%= address_form.text_field :postcode %>
  <% end %>
  <h2>Contact</h2>
  <%= fields_for @order.contact do |contact_form| %>
    <%= contact_form.label :titre %>
    <%= contact_form.select(:title) do %>
      <% [['Madame', 1], ['Mademoiselle', 2], ['Monsieur', 3]].each do |o| %>
        <%= content_tag(:option, o.first, value: o.last) %>
      <% end %>
    <% end %>
    <br/>
    <%= contact_form.label :prénom %>
    <%= contact_form.text_field :first_name %>
    <%= contact_form.label :nom %>
    <%= contact_form.text_field :last_name %>
    <%= contact_form.label :email %>
    <%= contact_form.text_field :email %>
    <%= contact_form.label :téléphone %>
    <%= contact_form.text_field :phone %>
  <% end %>
  <%= submit_tag("Confirmer") %>
<% end %>
