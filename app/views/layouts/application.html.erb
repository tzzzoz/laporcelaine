<!DOCTYPE html>
<html>
  <head>
    <title>Laporcelaine</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- The splash screen -->
    <div id="splash">
      <div class="loader">
        <img class="splash-logo">
        <div class="line"></div>
      </div>
    </div>
    <!-- End of splash screen -->
    <div id="wrapper">
      <header id="cd-cart-header">
        <div id="cd-cart-trigger"><a class="cd-img-replace" href="#0">Cart</a></div>
      </header>
      <main>
        <%= yield %>
      </main>
    </div>
    <div id="cd-shadow-layer"></div>
    <div id="cd-cart">
      <header class="cd-cart-top"> </header>
      <h2>Cart</h2>
      <%= form_tag checkout_path, method: 'POST' do %>
        <ul id="cd-cart-items">
        </ul> <!-- cd-cart-items -->

        <div id="cd-cart-total">
          <p>Total <span>0â‚¬</span></p>
        </div> <!-- cd-cart-total -->

        <%= submit_tag("Checkout", class: "checkout-btn") %>
      <% end %>
    </div> <!-- cd-cart -->

    <%= unordered_list(slideshow_images, id: 'slideshow') do |img_src| %>
      <% content_tag(:li, nil) do %>
        <% image_tag(img_src, alt: "slideshow image") %>
      <% end %>
    <% end %>
    <script type="text/javascript">
      var railsVars = {"ajaxOn": true};
    </script>
  </body>
</html>
